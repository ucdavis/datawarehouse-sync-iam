<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="edu.ucdavis.dss.datawarehouse.sync.iam">
		<description>
			Persistence unit for DW IAM sync
		</description>

		<class>edu.ucdavis.dss.iam.dtos.IamAssociation</class>
		<class>edu.ucdavis.dss.iam.dtos.IamDepartment</class>
		<class>edu.ucdavis.dss.iam.dtos.IamContactInfo</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/datawarehouse" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			
			<!-- JDBC connection pool (use the built-in) -->
			<property name="hibernate.connection.pool_size" value="1" />
	
			<!-- SQL dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
	
			<!-- Disable the second-level cache -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.internal.NoCacheProvider" />
		</properties>

	</persistence-unit>

</persistence>
